@{
    ViewBag.Title = "Liên hệ Inox Linh Kiên Thái Bình";
    Layout = "~/Views/Share/_Home.cshtml";
}
@section contactstyle {
    <link rel="stylesheet" type="text/css" href="/styles/contact_styles.css">
    <link rel="stylesheet" type="text/css" href="/styles/contact_responsive.css">
}
<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Index2","Home")">Trang chủ</a></li>
                    <li class="active"><a href="@Url.Action("Contact","Home")"><i class="fa fa-angle-right" aria-hidden="true"></i>Liên hệ</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Map Container -->

    <div class="row">
        <div class="col">
            <div id="google_map">
                <div class="map_container">
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us -->

    <div class="row">

        <div class="col-lg-6 contact_col">
            <div class="contact_contents">
                <h1>Thông tin liên hệ</h1>
                <p>Hãy liên hệ với chúng tôi để được tư vấn những sản phẩm chất lượng nhất với phương châm "Sự hài lòng của khách hàng là niềm hạnh phúc với chúng tôi"</p>
                <div>
                    <p>Điện thoại: 0931.585.528</p>
                    <p>Email: inoxlinhkien@gmail.com</p>
                </div>
                <div>
                    <p>Giám đốc: Vũ Ngọc Kiên</p>
                </div>
                <div>
                    <p>Địa chỉ: Lô B1 Khu Công Nghiệp Nguyễn Đức Cảnh, TP. Thái Bình</p>
                    <p>Công ty TNHH Thương mại cơ khí Linh Kiên</p>
                </div>
            </div>

            <!-- Follow Us -->

            <div class="follow_us_contents">
                <h1>Theo dõi chúng tôi </h1>
                <ul class="social d-flex flex-row">
                    <li><a href="#" style="background-color: #3a61c9"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    <li><a href="#" style="background-color: #41a1f6"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                    <li><a href="#" style="background-color: #fb4343"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                    <li><a href="#" style="background-color: #8f6247"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                </ul>
            </div>

        </div>

        <div class="col-lg-6 get_in_touch_col">
            <div class="get_in_touch_contents">
                <h1>Gửi Email cho chúng tôi</h1>
                <p>Điền nội dung yêu cầu tại đây</p>
                <form>
                    <div>
                        <input id="input_name" class="form_input input_name input_ph" type="text" name="name" placeholder="Tên" required="required" data-error="Nhập tên của bạn.">
                        <input id="input_email" class="form_input input_email input_ph" type="email" name="email" placeholder="Email" required="required" data-error="Nhập Email của bạn.">
                        <textarea id="input_message" class="input_ph input_message" name="message" placeholder="Nội dung" rows="3" required data-error="Hãy viết nội dung yêu cầu"></textarea>
                    </div>
                    <div>
                        <button id="review_submit" type="submit" class="red_button message_submit_btn trans_300" value="Submit">Gửi Email</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section contactjs{
    <script src="/js/contact_custom.js"></script>
}

