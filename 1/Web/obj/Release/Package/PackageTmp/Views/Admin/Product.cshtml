@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Share/_Admin.cshtml";
}
<div class="container">
    <div class="row">
            <button type="button" class="btn btn-default" onclick="addpopup();">Thêm mới sản phẩm</button>     
    </div>
    <div class="row">
        <table id="myTable" class="table table-bordered table-hover table-responsive" style="width: 100%;">
            <thead class="bg-danger">
                <tr>
                    <td style="width:5%">ID</td>
                    <td style="width:25%">Tên sản phẩm</td>
                    <td style="width:10%">Chất liệu</td>
                    <td style="width:5%">Chủng loại</td>                   
                    <td style="width:25%">Ảnh sản phẩm</td>
                    <td style="width:20%"></td>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>

        </table>
        <!--modal-->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" style="width:60%">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-envelope"></span> Thêm mới sản phẩm</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="Id">Mã sản phẩm <span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="Id" placeholder="Mã sản phẩm" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Tên sản phẩm <span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="Name" placeholder="Tên sản phẩm" />
                        </div>
                        <div class="form-group">
                            <label for="MadeFrom">Chất liệu<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="MadeFrom" placeholder="Chất liệu" />

                        </div>
                        <div class="form-group">
                            <label for="CategoryId">Mã chủng loại<span class="labels">(*)</span></label>
                            <select class="form-control" id="CategoryId" name="CategoryId"></select>

                        </div>
                        <div class="form-group">
                            <label for="Dimenson">Kích thước<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="Dimenson" placeholder="Kích thước" />
                        </div>

                        <div class="form-group">
                            <label for="Image">Ảnh<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="Image" placeholder="Ảnh" />
                        </div>
                        <div class="form-group">
                            <input type="button" value="Thay ảnh" onclick="BrowseServer();" />
                        </div>
                        <div class="form-group">
                            <label for="Seo">Từ khóa SEO<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="Seo" placeholder="Từ khóa Seo" />
                        </div>
                        <div class="form-group">
                            <label for="Remark">Mô tả</label>
                            <textarea id="Remark" name="txtArea" class="ckeditor form-control" rows="2" cols="20" placeholder="GHi chú"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();"><span class="glyphicon glyphicon-ok"></span> Thêm mới</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update()"><span class="glyphicon glyphicon-ok"></span>Cập nhật</button>
                        <button type="button" class="btn btn-danger btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Ket thuc modal-->
        <!-- model show content-->
        <div class="modal fade" id="modalshowcontent" tabindex="-2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" style="width:80%">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modalshowcontentLabel"><span class="glyphicon glyphicon-th"></span> Nội dung chi tiết</h4>
                    </div>
                    <div class="modal-body">
                        <div id="modalshowcontent_body">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Ket thuc show content modal-->
    </div>
</div>
@section productjs
{
    <script src="/admin_dist/js/product.js"></script>
}